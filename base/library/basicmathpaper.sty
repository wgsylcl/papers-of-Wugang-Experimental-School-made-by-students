\ProvidesPackage{basicmathpaper}
\RequirePackage{enumitem}
\RequirePackage{fontspec}

\newcommand{\selectingintroduction}{一、选择题（每小题3分，共30分）}
\newcommand{\complitingintroduction}{二、填空题（每小题3分，共18分）}
\newcommand{\answeringintroduction}{三、解答题（共8题、72分，每小题应写出解答过程、演算步骤或文字说明）}
\newcommand{\papertitle}[1]{\section*{\centering #1}}
\newcommand{\paperinformation}[1]{\centerline{#1}}

\newcommand{\circnum}[1]{\ding{\numexpr171+#1\relax}}

%选择题盒子,1行4选项
\newcommand{\onp} [4] { \\
    \begin{tabular} {*{4}{@{}p{3.5cm}}}
        A.~#1 & B.~#2 & C.~#3 & D.~#4
    \end{tabular}
}
%选择题盒子,1行2选项
\newcommand{\twp} [4] { \\
    \begin{tabular} {*{2}{@{}p{7cm}}}
        A.~#1 & B.~#2
    \end{tabular} \\
    \begin{tabular} {*{2}{@{}p{7cm}}}
        C.~#3 & D.~#4
    \end{tabular}
}
%选择题盒子,1行1选项
\newcommand{\fop} [4] { \\
    A.~#1 \\
    B.~#2 \\
    C.~#3 \\
    D.~#4
}

\newcounter{taskcounter} % 大题当前最后一题序号计数器
\newcounter{subtaskcounter}[taskcounter] % 小题当前最后一题序号计数器
\newcounter{subsubtaskcounter}[subtaskcounter] % 二级小题当前最后一题序号计数器

\newcommand{\question}{
\stepcounter{taskcounter} % 大题计数器加一
\item}

\newcommand{\subquestion}{
\stepcounter{subtaskcounter} % 小题计数器加一
\item}

\newcommand{\subsubquestion}{
\stepcounter{subsubtaskcounter} % 二级小题计数器加一
\item[\circnum{\value{subsubtaskcounter}}]
}

\newenvironment{questions}[1]
{\section*{\normalsize #1}
\begin{enumerate}\setcounter{enumi}{\value{taskcounter}}}
{\end{enumerate}}

\newenvironment{subquestions}
{\begin{compactenum}[（1）]}
{\end{compactenum}}

\newenvironment{subsubquestions}
{\begin{compactenum}}
{\end{compactenum}}