%选择题盒子,1行4选项
\newcommand{\onp} [4] { \\
    \begin{tabular} {*{4}{@{}p{4.2cm}}}
        A.~#1 & B.~#2 & C.~#3 & D.~#4
    \end{tabular}
}
%选择题盒子,1行2选项
\newcommand{\twp} [4] { \\
    \begin{tabular} {*{2}{@{}p{8.4cm}}}
        A.~#1 & B.~#2
    \end{tabular} \\
    \begin{tabular} {*{2}{@{}p{8.4cm}}}
        C.~#3 & D.~#4
    \end{tabular}
}
